
import javax.swing.JButton;
import javax.swing.JFrame;  ///pentru a crea identitatea vizuala a aplicatiei 
import java.awt.Color;///pentru a adauga culori de fundal 
import java.awt.GridLayout;  ////pentru a permite afisarea mai multor butoane simultan 


import javax.swing.SwingUtilities;


public class Main{
    public static void main(String [] args){
        SwingUtilities.invokeLater(new Runnable(){
            public void run(){
                createCalculator();
            }

        });
    }
    private static void createCalculator(){
        JFrame calculator=new JFrame("Calculator");        ///////numele atribuit ferestei 
        calculator.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        calculator.setSize(500,400);     ////hotaraste dimensiunea ferestei calculatorullui 
        calculator.setVisible(true);       ////asigura afisarea ferestrei 
        calculator.getContentPane().setBackground(Color.BLACK);  /////seteaza culoarea neagra ferestei de deschidere a calculatorului
        calculator.setLayout(new GridLayout(4,4));
        addButtons(calculator);
    }
    private static void addButtons(JFrame calculator){
        JButton zero=new JButton("0");
        JButton one=new JButton("1");
        JButton two=new JButton("2");
        JButton three=new JButton("3");
        JButton four=new JButton("4");
        JButton five=new JButton("5");
        JButton six=new JButton("6");
        JButton seven=new JButton("7");
        JButton eight=new JButton("8");
        JButton nine=new JButton("9");

        calculator.add(seven);
        calculator.add(eight);
        calculator.add(nine);
        calculator.add(four);
        calculator.add(five);
        calculator.add(six);
        calculator.add(one);
        calculator.add(two);
        calculator.add(three);
        
        calculator.add(zero);

    }
}
